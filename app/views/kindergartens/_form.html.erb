<%= form_with(model: kindergarten) do |form| %>
  <% if kindergarten.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(kindergarten.errors.count, "error") %> prohibited this kindergarten from being saved:</h2>

      <ul>
        <% kindergarten.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :photo, style: "display: block" %>
    <%= form.file_field :photo %>
  </div>

  <div>
    <%= form.label :pets, style: "display: block" %>
    <%= form.collection_check_boxes :pet_ids, @pets, :id, :name %>
  </div>

  <div class='row'>
    <div class='col-6'>
      <%= form.label :city_id, style: "display: block" %>
      <%= form.collection_select :city_id, @cities, :id, :name %>
    </div>

    <div class='col-6'>
      <%= form.label :price, style: "display: block" %>
      <%= form.number_field :price %>
    </div>
  </div>

  <div class='row'>
    <div class='col-6'>
      <%= form.label :phone, style: "display: block" %>
      <%= form.text_field :phone %>
    </div>

    <div class='col-6'>
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email %>
    </div>
  </div>

  <div>
    <%= form.label :available, style: "display: block" %>
    <%= form.check_box :available %>
  </div>

  <div>
    <%= form.hidden_field :user_id, value:current_user.id.to_i %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
